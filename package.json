{
  "name": "nest-typeorm-graphql",
  "version": "0.1.0",
  "description": "nest.js + typeorm easy graphql server",
  "author": "lzb1175808746@qq.com",
  "private": true,
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "dev": "nest start --watch",
    "debug": "nest start --debug --watch",
    "build": "nest build",
    "start": "node dist/main",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix"
  },
  "dependencies": {
    "@nestjs/apollo": "^10.0.7",
    "@nestjs/common": "^8.4.2",
    "@nestjs/core": "^8.4.2",
    "@nestjs/graphql": "^10.0.7",
    "@nestjs/platform-express": "^8.4.2",
    "@nestjs/typeorm": "^8.0.3",
    "apollo-server-express": "^3.6.5",
    "graphql": "^16.3.0",
    "graphql-tools": "^8.2.1",
    "mongodb": "^3.7.3",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.5.5",
    "typeorm": "^0.2.45"
  },
  "devDependencies": {
    "@nestjs/cli": "^8.2.4",
    "@nestjs/schematics": "^8.0.8",
    "@nestjs/testing": "^8.4.2",
    "@types/express": "^4.17.13",
    "@types/jest": "27.4.1",
    "@types/node": "^16.11.26",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "5.16.0",
    "@typescript-eslint/parser": "5.16.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-import": "^2.25.4",
    "express": "^4.17.3",
    "jest": "27.5.1",
    "prettier": "^2.6.0",
    "run-script-webpack-plugin": "^0.0.11",
    "supertest": "^6.2.2",
    "ts-jest": "27.1.3",
    "ts-loader": "^9.2.8",
    "ts-node": "^10.7.0",
    "tsconfig-paths": "^3.14.0",
    "typescript": "^4.6.2",
    "webpack": "^5.70.0",
    "webpack-node-externals": "^3.0.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
